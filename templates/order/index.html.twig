{% extends 'base.html.twig' %}

{% block title %}Moje zamówienia{% endblock %}

{% block body %}
<div class="container py-4">
	<h1 class="mb-4">Moje zamówienia</h1>

	{% if orders is empty %}
		<div class="alert alert-secondary">Nie masz jeszcze żadnych zamówień.</div>
	{% else %}
		<table class="table align-middle">
			<thead>
				<tr>
					<th>#</th>
					<th>Status</th>
					<th>Dostawa</th>
					<th>Płatność</th>
					<th>Data</th>
					<th class="text-end"></th>
				</tr>
			</thead>
			<tbody>
				{% for o in orders %}
					<tr>
						<td>#{{ o.id }}</td>
						<td>{{ o.Status }}</td>
						<td>{{ o.DeliveryMethod }}</td>
						<td>{{ o.PaymentMethod }}</td>
						<td>{{ o.CreatedAt ? o.CreatedAt|date('Y-m-d H:i') : '' }}</td>
						<td class="text-end">
							<a class="btn btn-sm btn-outline-primary" href="{{ path('order_show', { id: o.id }) }}">
								Szczegóły
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% endif %}
</div>
{% endblock %}
