<style>
	.nav-btn{
		border-radius: .5rem;
		transition: background-color .15s ease, color .15s ease, transform .15s ease;
	}
	.row-top .nav-btn { padding: .35rem .25rem; }
	.row-bottom .nav-btn { padding: .35rem .55rem; }
	.nav-btn:hover{
		background: rgba(0,0,0,.06);
	}
	.nav-btn:active{
		transform: translateY(1px);
	}
	.nav-btn:focus-visible{
		outline: 2px solid rgba(13,110,253,.35);
		outline-offset: 2px;
	}
	.text-xs{ font-size: .8rem; }
</style>

<div class="d-flex flex-column w-100 ">
	<div class="d-flex align-items-center justify-content-center flex-grow-1" style="flex:1;">
		<div class="d-flex align-items-center gap-0 row-top">
			<a href="#" class="nav-btn text-decoration-none text-dark d-inline-flex align-items-center" aria-label="Telefon">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<path d="M22 16.92v3a2 2 0 0 1-2.18 2A19.79 19.79 0 0 1 3.08 5.18 2 2 0 0 1 5.06 3h3a2 2 0 0 1 2 1.72c.12.9.32 1.77.59 2.6a2 2 0 0 1-.45 2.11L9.09 10.91a16 16 0 0 0 4 4l1.48-1.11a2 2 0 0 1 2.11-.45c.83.27 1.7.47 2.6.59A2 2 0 0 1 22 16.92z"></path>
				</svg>
			</a>

			<a href="#" class="nav-btn text-decoration-none text-dark d-inline-flex align-items-center" aria-label="Email">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<circle cx="12" cy="12" r="4"></circle>
					<path d="M16 8v5a3 3 0 0 0 6 0v-1a10 10 0 1 0-4 8"></path>
				</svg>
			</a>

			<a href="#" class="nav-btn text-decoration-none text-dark text-xs">Kontakt</a>
			<a href="#" class="nav-btn text-decoration-none text-dark text-xs">O nas</a>
			<a href="#" class="nav-btn text-decoration-none text-dark text-xs">FAQ</a>
		</div>
	</div>

	<div class="d-flex align-items-center justify-content-center flex-grow-1" style="flex:2;">
		<div class="d-flex align-items-center gap-0 row-bottom">
			<a href="#" class="nav-btn text-decoration-none text-dark d-inline-flex align-items-center" aria-label="Ulubione">
				<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<path d="M20.8 4.6a5.5 5.5 0 0 0-7.8 0L12 5.6l-1-1a5.5 5.5 0 0 0-7.8 7.8l1 1L12 21.4l7.8-7.8 1-1a5.5 5.5 0 0 0 0-7.8z"></path>
				</svg>
			</a>

			<a href="{{ path('cart_show') }}" class="nav-btn text-decoration-none text-dark d-inline-flex align-items-center" aria-label="Koszyk">
				<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<circle cx="9" cy="21" r="1"></circle>
					<circle cx="20" cy="21" r="1"></circle>
					<path d="M1 1h4l2.7 13.4a2 2 0 0 0 2 1.6h9.7a2 2 0 0 0 2-1.6L23 6H6"></path>
				</svg>
			</a>

			{% if app.user %}
				<span class="small text-muted">
					{{ app.user.firstName|default('') }} {{ app.user.lastName|default('') }}
				</span>
				<a class="btn btn-outline-secondary btn-sm" href="{{ path('app_logout') }}">Wyloguj</a>
			{% else %}
				<a href="{{ path('app_login') }}" class="nav-btn text-decoration-none text-dark d-inline-flex align-items-center gap-2">
				<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
					<circle cx="12" cy="7" r="4"></circle>
				</svg>
				<span>Zaloguj się</span>
			</a>
			{% endif %}
			<a class="btn btn-outline-secondary btn-sm" href="{{ path('order_index') }}">Zamówienia</a>
			
		</div>
	</div>

</div>
