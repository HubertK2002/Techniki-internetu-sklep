{% extends 'base_blank.html.twig' %}

{% block title %}Admin login{% endblock %}

{% block body %}
<div class="container py-5" style="max-width: 520px;">
	<div class="card shadow-sm">
		<div class="card-body p-4">
			<h1 class="h4 mb-3">Logowanie do panelu</h1>

			{% if error %}
				<div class="alert alert-danger">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			<form method="post" action="{{ path('admin_login') }}" data-turbo="false">
				<div class="mb-3">
					<label class="form-label" for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail"
						   class="form-control" autocomplete="email" required autofocus>
				</div>

				<div class="mb-3">
					<label class="form-label" for="inputPassword">Hasło</label>
					<input type="password" name="password" id="inputPassword"
						   class="form-control" autocomplete="current-password" required>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="btn btn-primary w-100" type="submit">Zaloguj</button>
			</form>

			<hr class="my-4">
			<div class="small text-muted">Niezależne logowanie do /admin.</div>
		</div>
	</div>
</div>
{% endblock %}
