{% extends 'base.html.twig' %}

{% block title %}Sign in{% endblock %}

{% block body %}
<div class="container py-5">
	<div class="row justify-content-center">
		<div class="col-12 col-sm-10 col-md-8 col-lg-5">

			{% if app.user %}
				<div class="alert alert-info d-flex justify-content-between align-items-center">
					<div>
						You are logged in as <strong>{{ app.user.userIdentifier }}</strong>.
					</div>
					<a class="btn btn-sm btn-outline-secondary" href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}

			<div class="card shadow-sm">
				<div class="card-body p-4">
					<h1 class="h3 mb-3">Sign in</h1>

					{% if error %}
						<div class="alert alert-danger">
							{{ error.messageKey|trans(error.messageData, 'security') }}
						</div>
					{% endif %}

					<form method="post" novalidate>
						<div class="mb-3">
							<label for="inputEmail" class="form-label">Email</label>
							<input
								type="email"
								value="{{ last_username }}"
								name="email"
								id="inputEmail"
								class="form-control"
								autocomplete="email"
								required
								autofocus
							>
						</div>

						<div class="mb-3">
							<label for="inputPassword" class="form-label">Password</label>
							<input
								type="password"
								name="password"
								id="inputPassword"
								class="form-control"
								autocomplete="current-password"
								required
							>
						</div>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						<div class="form-check mb-3">
							<input class="form-check-input" type="checkbox" name="_remember_me" id="rememberMe">
							<label class="form-check-label" for="rememberMe">Remember me</label>
						</div>

						<button class="btn btn-primary w-100" type="submit">
							Sign in
						</button>
					</form>

					<hr class="my-4">

					<div class="d-flex justify-content-between small">
						<a href="{{ path('app_register') }}">Create account</a>
						<a href="{{ path('app_resend_verification_email') }}">Resend verification email</a>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>
{% endblock %}
